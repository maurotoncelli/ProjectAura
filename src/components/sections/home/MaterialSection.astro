---
import { getHomeContent } from '../../../lib/data';
const home = getHomeContent();
---

<section id="material-section" class="min-h-screen w-full relative flex items-center overflow-hidden bg-black z-curtain">
  <!-- Video Loop Background -->
  <div class="absolute inset-0 z-0 overflow-hidden">
    <video
      autoplay
      muted
      loop
      playsinline
      preload="auto"
      class="w-full h-full object-cover"
      poster={home.material.bgImage}
    >
      <source src={home.material.videoLoop} type="video/mp4" />
    </video>
  </div>


  <!-- Content -->
  <div class="container mx-auto px-8 relative z-10 flex flex-col items-end justify-center min-h-screen py-24">
    <!-- Text (right-aligned) -->
    <div class="w-full md:w-1/2 text-white reveal-on-scroll">
      <p class="text-xs text-at-oak font-bold uppercase tracking-widest mb-6">{home.material.label}</p>
      <h2 class="section-title font-light mb-8 leading-none fluid-element" set:html={home.material.headingHtml}></h2>
      <p class="text-at-text-muted text-2xl leading-relaxed mb-8 font-light fluid-element">{home.material.description}</p>
    </div>
  </div>

  <!-- Bottom-center video button -->
  <div class="absolute bottom-24 left-0 right-0 z-10 flex justify-center">
    <button
      class="px-10 py-4 bg-white text-at-graphite text-sm uppercase tracking-[0.2em] font-medium hover:bg-white/80 transition-all duration-500 border-none"
      onclick="window.openVideoModal && window.openVideoModal()"
    >
      {home.material.videoButtonLabel}
    </button>
  </div>
</section>
