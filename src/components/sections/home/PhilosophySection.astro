---
import { getHomeContent } from '../../../lib/data';
const home = getHomeContent();
---

<section class="min-h-screen w-full relative bg-at-stone/20 backdrop-blur-md flex items-center justify-center py-24 overflow-hidden z-glass">
  <div class="container mx-auto px-8 relative h-full flex flex-col md:flex-row items-center justify-between">
    <div class="hidden md:flex flex-col h-[60vh] justify-between py-12 border-l border-at-graphite/10 pl-8 reveal-on-scroll">
      <div class="writing-vertical text-xs font-bold uppercase tracking-[0.3em] text-at-oak">{home.philosophy.label}</div>
      <div class="writing-vertical text-4xl font-serif text-at-graphite/20">{home.philosophy.number}</div>
    </div>
    <div class="w-full md:w-1/2 relative z-10 text-center md:text-left md:pl-24">
      <h2 class="text-[clamp(3rem,6vw,5rem)] font-light leading-none mb-12 reveal-on-scroll fluid-element" set:html={home.philosophy.headingHtml}></h2>
      <div class="flex flex-col md:flex-row gap-12 items-start">
        <p class="text-xl text-at-text-muted font-light leading-relaxed max-w-sm reveal-on-scroll fluid-element">{home.philosophy.description}</p>
        <div class="w-full md:w-80 h-80 img-reveal-wrapper shadow-2xl">
          <img src={home.philosophy.image} class="w-full h-full object-cover grayscale hover:grayscale-0 transition-[filter] duration-1000" alt="Wood Texture" loading="lazy" decoding="async" />
        </div>
      </div>
    </div>
    <div class="absolute right-0 top-1/2 -translate-y-1/2 w-[30vw] h-[80vh] hidden md:block opacity-20 pointer-events-none">
      <img src={home.philosophy.bgImage} class="parallax-img w-full h-[120%] object-cover grayscale" data-speed="0.05" alt="Shadows" loading="lazy" decoding="async" />
    </div>
  </div>
</section>
