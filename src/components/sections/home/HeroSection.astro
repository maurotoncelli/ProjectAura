---
import { getHomeContent } from '../../../lib/data';
const home = getHomeContent();
---

<!-- Fixed Hero Text (blend-nav) -->
<div id="fixed-hero-text" class="fixed bottom-0 left-0 w-full p-8 md:p-12 flex justify-between items-end fixed-ui blend-nav text-white pointer-events-none">
  <div id="hero-text-content" class="opacity-0 translate-y-8">
    <h1 class="hero-title font-light mb-2">{home.hero.title}</h1>
    <p class="text-xs md:text-sm uppercase tracking-[0.3em] opacity-80 pl-2">{home.hero.subtitle}</p>
  </div>
  <div class="text-right hidden md:block opacity-0 translate-y-8" id="hero-price-content">
    <p class="text-xs uppercase tracking-widest opacity-60 mb-1">{home.hero.branding}</p>
    <p class="text-2xl font-serif italic">{home.hero.workshop}</p>
  </div>
</div>

<!-- Empty viewport for 3D canvas -->
<section class="h-screen w-full flex flex-col justify-between p-8 relative pointer-events-none"></section>
