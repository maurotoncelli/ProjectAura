---
import { getHomeContent } from '../../../lib/data';
const home = getHomeContent();
---

<section id="tech-section" class="h-screen w-full flex items-center justify-center relative z-bottom">
  <div class="text-center max-w-3xl px-6 opacity-0 translate-y-20" id="tech-text">
    <p class="text-sm text-at-light font-bold uppercase tracking-widest mb-6">{home.tech.label}</p>
    <h2 class="text-5xl md:text-8xl text-at-stone font-light mb-8 tracking-tighter" set:html={home.tech.headingHtml}></h2>
    <p class="text-at-text-muted text-xl leading-relaxed max-w-xl mx-auto">{home.tech.description}</p>
    <div class="mt-16 flex justify-center space-x-4">
      {home.tech.integrations.map((integration) => (
        <span class="px-6 py-3 border border-at-stone/20 text-at-text-muted text-xs rounded-full uppercase tracking-widest">{integration}</span>
      ))}
    </div>
  </div>
</section>
