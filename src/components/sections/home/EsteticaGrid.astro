---
import { getHomeContent } from '../../../lib/data';
const home = getHomeContent();
---

<section class="w-full bg-at-stone py-16 md:py-32 overflow-hidden z-curtain">
  <div class="container mx-auto px-8">
    <div class="flex flex-col md:flex-row justify-between items-center md:items-end mb-12 md:mb-24 reveal-on-scroll text-center md:text-left">
      <div>
        <p class="text-xs text-at-oak font-bold uppercase tracking-widest mb-4">{home.estetica.label}</p>
        <h3 class="section-title font-light leading-none fluid-element" set:html={home.estetica.headingHtml}></h3>
      </div>
      <p class="max-w-md text-at-text-muted text-sm mt-8 md:mt-0 fluid-element">{home.estetica.subtitle}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 h-auto md:h-[120vh]">
      <div class="md:col-span-5 h-[60vh] md:h-full relative overflow-hidden group img-reveal-wrapper">
        <img src={home.estetica.grid.mainImage.src} class="w-full h-full object-cover" alt={home.estetica.grid.mainImage.alt} loading="lazy" decoding="async" />
      </div>
      <div class="md:col-span-7 flex flex-col gap-4 h-full">
        <div class="h-[40vh] md:h-[50%] relative overflow-hidden group img-reveal-wrapper">
          <img src={home.estetica.grid.topRight.src} class="w-full h-full object-cover" alt={home.estetica.grid.topRight.alt} loading="lazy" decoding="async" />
        </div>
        <div class="h-[40vh] md:h-[50%] grid grid-cols-2 gap-4">
          <div class="relative overflow-hidden group img-reveal-wrapper">
            <img src={home.estetica.grid.bottomLeft.src} class="w-full h-full object-cover" alt={home.estetica.grid.bottomLeft.alt} loading="lazy" decoding="async" />
          </div>
          <div class="relative overflow-hidden group img-reveal-wrapper">
            <img src={home.estetica.grid.bottomRight.src} class="w-full h-full object-cover" alt={home.estetica.grid.bottomRight.alt} loading="lazy" decoding="async" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
