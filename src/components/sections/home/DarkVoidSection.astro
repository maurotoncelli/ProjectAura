---
import { getHomeContent } from '../../../lib/data';
const home = getHomeContent();

const getColorClass = (color: string) => {
  const colorMap: Record<string, string> = {
    'at-light': 'text-at-light/80',
    'emerald-300': 'text-emerald-300/80',
    'cyan-300': 'text-cyan-300/80'
  };
  return colorMap[color] || 'text-at-text-muted/80';
};
---

<section id="dark-void-section" class="h-[80vh] w-full relative flex flex-col items-center justify-center pointer-events-none gap-16 md:gap-24 z-bottom">
  {home.tech.ledSpecs.map((row) => (
    <div class={`w-full max-w-5xl flex justify-between px-8 ${getColorClass(row.color)} text-xs font-mono uppercase tracking-widest reveal-on-scroll`} style={`text-shadow: 0 0 15px ${row.shadow};`}>
      {row.items.map((item) => (
        <div class="text-center w-1/3"><span class="block text-2xl md:text-4xl font-light mb-2 text-white">{item.value}</span>{item.label}</div>
      ))}
    </div>
  ))}
</section>
