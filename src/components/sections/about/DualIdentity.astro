---
import { getAboutContent } from '../../../lib/data';
const about = getAboutContent();
---

<section class="w-full bg-at-surface text-at-graphite py-32 border-t border-b border-at-border">
  <div class="container mx-auto px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-32">
      <div class="flex flex-col justify-between h-full reveal-on-scroll">
        <div class="mb-12">
          <div class="w-12 h-12 bg-at-graphite text-white flex items-center justify-center rounded-full mb-6 font-mono text-xs">{about.dualIdentity.atStudio.logo}</div>
          <h2 class="text-5xl md:text-7xl font-light mb-8 fluid-element" set:html={about.dualIdentity.atStudio.headingHtml}></h2>
          <p class="text-lg text-at-text-muted leading-relaxed max-w-md fluid-element" set:html={about.dualIdentity.atStudio.description}></p>
        </div>
        <div class="w-full aspect-square bg-at-surface border border-at-border p-8 relative group rounded-sm bento-card">
          <div class="w-full h-full relative overflow-hidden img-reveal-wrapper">
            <img src={about.dualIdentity.atStudio.image} class="w-full h-full object-cover opacity-80 transition-[filter] duration-1000 grayscale group-hover:grayscale-0" alt="Cybernetics" loading="lazy" decoding="async" />
            <div class="absolute inset-0 bg-at-stone/20 mix-blend-multiply"></div>
          </div>
        </div>
      </div>
      <div class="flex flex-col justify-between h-full reveal-on-scroll mt-16 lg:mt-32">
        <div class="w-full aspect-square bg-at-surface border border-at-border p-8 relative group rounded-sm mb-12 bento-card">
          <div class="w-full h-full relative overflow-hidden img-reveal-wrapper">
            <img src={about.dualIdentity.segnobianco.image} class="w-full h-full object-cover opacity-80 transition-[filter] duration-1000 grayscale group-hover:grayscale-0" alt="Craftsmanship" loading="lazy" decoding="async" />
            <div class="absolute inset-0 bg-at-stone/20 mix-blend-multiply"></div>
          </div>
        </div>
        <div>
          <div class="w-12 h-12 border border-at-graphite text-at-graphite flex items-center justify-center rounded-full mb-6 font-serif italic text-lg">{about.dualIdentity.segnobianco.logo}</div>
          <h2 class="text-5xl md:text-7xl font-light mb-8 font-serif italic fluid-element" set:html={about.dualIdentity.segnobianco.headingHtml}></h2>
          <p class="text-lg text-at-text-muted leading-relaxed max-w-md fluid-element mb-12" set:html={about.dualIdentity.segnobianco.description}></p>
        </div>
      </div>
    </div>
  </div>
</section>
