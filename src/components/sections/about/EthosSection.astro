---
import { getAboutContent } from '../../../lib/data';
const about = getAboutContent();
---

<section class="w-full py-48 relative overflow-hidden bg-at-graphite text-white">
  <div class="absolute inset-0 z-0"><img src={about.ethos.bgImage} class="w-full h-full object-cover opacity-20 grayscale parallax-img" data-speed="0.2" alt="Forest" /></div>
  <div class="container mx-auto px-8 relative z-10 flex flex-col md:flex-row items-center gap-24">
    <div class="w-full md:w-1/2 reveal-on-scroll">
      <div class="writing-vertical text-xs font-bold uppercase tracking-[0.3em] text-white/50 h-24 mb-8 rotate-180">{about.ethos.label}</div>
      <h3 class="text-6xl md:text-8xl font-serif italic mb-12 fluid-element" set:html={about.ethos.headingHtml}></h3>
    </div>
    <div class="w-full md:w-1/2 h-[600px] bg-gray-900 relative img-reveal-wrapper reveal-on-scroll">
      <img src={about.ethos.image} class="w-full h-full object-cover opacity-80" alt="Forest" loading="lazy" decoding="async" />
    </div>
  </div>
</section>
