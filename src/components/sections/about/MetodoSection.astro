---
import { getAboutContent } from '../../../lib/data';
const about = getAboutContent();
---

<section class="w-full bg-at-stone py-32 relative">
  <div class="container mx-auto px-8 reveal-on-scroll">
    <p class="text-xs text-at-oak font-bold uppercase tracking-widest mb-12 text-center">{about.metodo.label}</p>
    <div class="grid grid-cols-1 md:grid-cols-3 grid-rows-2 gap-4 h-auto md:h-[800px]">
      <div class="row-span-2 col-span-1 md:col-span-1 relative overflow-hidden p-8 flex flex-col justify-between group bento-card">
        <img src={about.metodo.steps[0].bgImage} class="absolute inset-0 w-full h-full object-cover" alt="" loading="lazy" decoding="async" />
        <div class="relative z-10">
          <div class="text-6xl font-serif text-white/30">{about.metodo.steps[0].number}</div>
        </div>
        <div class="relative z-10">
          <h3 class="text-2xl font-light mb-4 text-white">{about.metodo.steps[0].heading}</h3>
          {about.metodo.steps[0].description && (
            <p class="text-sm text-white/70">{about.metodo.steps[0].description}</p>
          )}
        </div>
      </div>
      <div class="col-span-1 md:col-span-2 relative overflow-hidden p-8 flex flex-col md:flex-row items-center justify-between group bento-card">
        <img src={about.metodo.steps[1].bgImage} class="absolute inset-0 w-full h-full object-cover" alt="" loading="lazy" decoding="async" />
        <div class="relative z-10 w-full md:w-1/2">
          <div class="text-6xl font-serif text-white/30 mb-4">{about.metodo.steps[1].number}</div>
          <h3 class="text-3xl font-light mb-4 text-white">{about.metodo.steps[1].heading}</h3>
        </div>
      </div>
      <div class="col-span-1 relative overflow-hidden p-8 flex flex-col justify-center group bento-card">
        <img src={about.metodo.steps[2].bgImage} class="absolute inset-0 w-full h-full object-cover" alt="" loading="lazy" decoding="async" />
        <div class="relative z-10">
          <div class="text-6xl font-serif text-white/30 mb-4">{about.metodo.steps[2].number}</div>
          <h3 class="text-xl font-bold uppercase tracking-widest mb-2 text-white">{about.metodo.steps[2].heading}</h3>
        </div>
      </div>
      <div class="col-span-1 relative overflow-hidden p-8 flex flex-col justify-center group bento-card">
        <img src={about.metodo.steps[3].bgImage} class="absolute inset-0 w-full h-full object-cover" alt="" loading="lazy" decoding="async" />
        <div class="relative z-10">
          <div class="text-6xl font-serif text-white/30 mb-4">{about.metodo.steps[3].number}</div>
          <h3 class="text-xl font-bold uppercase tracking-widest mb-2 text-white">{about.metodo.steps[3].heading}</h3>
        </div>
      </div>
    </div>
  </div>
</section>
