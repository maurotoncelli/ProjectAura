---
import { getConfiguratorContent } from '../../../lib/data';
const config = getConfiguratorContent();
---

<section class="container mx-auto px-8 pb-32">
  <div class="border-t border-at-border pt-16 max-w-3xl mx-auto reveal-on-scroll text-at-walnut">
    <p class="text-xs font-bold uppercase tracking-widest mb-8 text-at-text-muted">{config.faq.label}</p>
    {config.faq.items.map((item) => (
      <details class="text-at-walnut"><summary class="text-at-walnut">{item.question}</summary><p class="text-at-walnut">{item.answer}</p></details>
    ))}
  </div>
</section>
