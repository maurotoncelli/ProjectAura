---
import { getConfiguratorContent } from '../../../lib/data';
const config = getConfiguratorContent();
---

<section class="container mx-auto px-8 mb-48 pt-32 reveal-on-scroll">
  <div class="flex flex-col md:flex-row gap-24 items-center">
    <div class="w-full md:w-1/2">
      <p class="text-xs text-at-oak font-bold uppercase tracking-widest mb-6">{config.sezione01.label}</p>
      <h2 class="text-6xl font-light mb-8 fluid-element uppercase tracking-tight text-at-walnut" set:html={config.sezione01.headingHtml}></h2>
      <p class="text-xl text-at-text-muted leading-relaxed">{config.sezione01.description}</p>
    </div>
    <div class="w-full md:w-1/2 h-[600px] overflow-hidden relative group img-reveal-wrapper">
      <img src={config.sezione01.image} class="w-full h-full object-cover" alt="Wood Soul" loading="lazy" decoding="async" />
    </div>
  </div>
</section>
